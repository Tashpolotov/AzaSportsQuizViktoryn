<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SportQuestionFragment">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:layout_constraintStart_toEndOf="@id/img_back"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textSize="26sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/bacHomeFragment"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >


        <ImageView
            android:id="@+id/img_sport"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/football"
            android:layout_gravity="center"

            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1/10"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="100dp"

        />

    <TextView
        android:id="@+id/tv_text_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_questions"
        app:layout_constraintTop_toTopOf="@id/tv_questions"
        android:text="Вопрос:"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginEnd="8dp"

        />

    <TextView
        android:id="@+id/tv_level_much"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_questions"
        app:layout_constraintStart_toStartOf="@id/tv_questions"
        app:layout_constraintEnd_toEndOf="@id/tv_questions"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:id="@+id/tv_text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_text_questions"
        app:layout_constraintTop_toTopOf="@id/tv_level_much"
        android:text="Уровень:"
        android:textColor="@color/white"
        android:textSize="26sp"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:backgroundTint="@color/bacHomeFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_level_much"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="12dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_question"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:cardCornerRadius="28dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/tv_questions1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Здесь должен быть вопрос"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_answer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="28dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="100dp"

            >

            <TextView
                android:id="@+id/tv_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Здесь должен быть ответ1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:clickable="true"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_answer2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="28dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="170dp"
            >

            <TextView
                android:id="@+id/tv_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Здесь должен быть ответ2"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:clickable="true"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_answer3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="28dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="240dp"
            >

            <TextView
                android:id="@+id/tv_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Здесь должен быть ответ3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:clickable="true"
                />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>